using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Observer
{
    public class Cat
    {
        public void catMiao() {
            Console.WriteLine("猫叫");
            new Dog().wang();
            new Child().cry();
        }

       public Action CatMiaoDeletage;
        /// <summary>
        /// 委托
        /// </summary>
        public void MiaoDeletage()
        {
            Console.WriteLine("猫叫");
            if (CatMiaoDeletage!=null)
            {
                CatMiaoDeletage.Invoke();//创建
            }
        }

        public event Action CatMiaoEvent;
        /// <summary>
        /// 事件
        /// </summary>
        public void MiaoEvent()
        {
            Console.WriteLine("猫叫");
            if (CatMiaoDeletage != null)
            {
                CatMiaoEvent.Invoke();//创建
            }
        }
    }
}
